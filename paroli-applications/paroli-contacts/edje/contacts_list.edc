
group { name: "people";
      min: 480 575;
      max: 480 575;
      parts {
          part{
            name: "base";
            type: RECT;
            description{ state: "default" 0.0;
              color:0 0 0 255;
              rel1{
                    relative: 0.0 0.0;
                }
                rel2 {
                    relative: 0.99 1.0;
                }
            }
          }
           part{
            name:"add-button";
            type:RECT;
            description { state: "default" 0.0;
            visible:1;
                  color: 255 255 255 0;
                  rel1 {
                          relative: 0.0 0.06;
                          to: "base";
                  }
                  rel2 {
                          relative: 0.4 0.15;
                          to: "base";
                  }
            }
            description { state: "wait" 0.0;
                  inherit:"default" 0.0;
            }
            description { state: "edit-mode" 0.0;
                  inherit:"default" 0.0;
            }
           }
           part{
            name:"add-button-text";
            type:TEXT;
            mouse_events:0;
            description { state: "default" 0.0;
            visible:1;
                  color: 255 255 255 255;
                  text {
                          align: 0.0 0.0;
                          size: 24;
                          text: "Add";
                          font: "Sans";
                  }
                  rel1 {
                          relative: 0.0 0.0;
                          to: "add-button";
                  }
                  rel2 {
                          relative: 1.0 1.0;
                          to: "add-button";
                  }
            }
            description { state: "edit-mode" 0.0;
                  color: 255 255 255 255;
                  text {
                          align: 0.0 0.0;
                          size: 24;
                          text: "done";
                          font: "Sans";
                  }
                  inherit:"default" 0.0;
            }
           }
           part{
            name:"contacts-items";
            type:SWALLOW;
              description { 
              state: "default" 0.0;
              color: 0 255 255 255;
              rel1 { to:"base";
                relative: 0.0 0.16;
                    }
              rel2 {to:"base";
                relative: 1.0 0.99;
                    }
            }
           }
      }
      programs {
          program 
              { 
                    name: "add-button";
                    signal: "mouse,up,1";
                    source: "add-button";
                    action: SIGNAL_EMIT "add_contact" "contacts-items";
              }
      }
}
